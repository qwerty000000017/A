        double[] prices = {79.5, 89.0, 89.0, 100.5, 115.5};

        System.out.println("=====DragonTea=====");
        for (int i = 0; i < items.length; i++) {
            System.out.println((i + 1) + ". " + items[i] + " - â‚±" + prices[i]);
        }

        input.close();
    }
}

